[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red
    new = green
[alias]
    co = checkout
    rbi = "!f() { git rebase -i HEAD~$1; }; f"
    can = commit --amend --no-edit
    com = checkout main
    cm = commit -a -m
[init]
    defaultBranch = main
[push]
    autoSetupRemote = true
